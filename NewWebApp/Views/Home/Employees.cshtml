@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

<div class="row">
    <div class="col-md-5">
        <form method="post" action="employee">
            <div>
                <label>Форма для заполнения</label>
            </div>
            <div>
                <label>
                    Имя
                    <input type="text" name="name" />
                </label>
            </div>
            <div>
                <label>
                    Фамилия
                    <input type="text" name="surname" />
                </label>
            </div>
            <div>
                <label>
                    Должность
                    <select id="Select1" name="post">
                        <option>Должность1</option>
                        <option>Должность2</option>
                        <option>Должность3</option>
                    </select>
                </label>
            </div>
            <div>
                <label>
                    Зарплата
                    <input type="text" name="salary" />
                </label>
            </div>
            <div>
                <label>
                    <input type="submit" value="Отправить" />
                </label>
            </div>
        </form>
    </div>
    <div class="col-md-5">
        Список сотрудников
        <table>
            @{
                for (int i = 0; i < 4; i++)
                {
                    <tr>
                        <td>Сотрудник @i</td>
                        <td>Должность @i</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
</html>